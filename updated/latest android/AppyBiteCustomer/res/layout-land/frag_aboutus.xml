<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f363f"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlItemInfo"
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <ImageView
            android:id="@+id/ivHotelBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/hello_world"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_default_category" />

        <ImageView
            android:id="@+id/ivShadowTop"
            style="@style/shadow_top"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/hello_world" />

        <ImageView
            android:id="@+id/ivShadowBottom"
            style="@style/shadow_bottom"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/hello_world" />

        <TextView
            android:id="@+id/tvHotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin"
            android:background="#a0000000"
            android:padding="@dimen/small_margin"
            android:text="@string/hello_world"
            android:textColor="@color/White" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlItemInfo" >

        <RelativeLayout
            android:id="@+id/rlSubInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/small_margin" >

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_margin"
                android:text="Description" />

            <TextView
                android:id="@+id/tvOpening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDesc"
                android:padding="@dimen/small_margin"
                android:text="Opening: 00:00" />

            <TextView
                android:id="@+id/tvClosing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDesc"
                android:layout_marginLeft="@dimen/margin"
                android:layout_toRightOf="@+id/tvOpening"
                android:padding="@dimen/small_margin"
                android:text="Closing: 00:00" />

            <TextView
                android:id="@+id/tvAddressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOpening"
                android:padding="@dimen/small_margin"
                android:text="Address: " />

            <TextView
                android:id="@+id/tvAddressValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOpening"
                android:layout_marginLeft="@dimen/margin"
                android:layout_toRightOf="@+id/tvAddressLabel"
                android:autoLink="map"
                android:padding="@dimen/small_margin"
                android:text="@string/hello_world" />

            <TextView
                android:id="@+id/tvPhoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAddressLabel"
                android:padding="@dimen/small_margin"
                android:text="Phone: " />

            <TextView
                android:id="@+id/tvPhoneValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAddressLabel"
                android:layout_marginLeft="@dimen/margin"
                android:layout_toRightOf="@+id/tvPhoneLabel"
                android:autoLink="none"
                android:padding="@dimen/small_margin"
                android:text="@string/hello_world" />

            <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPhoneLabel"
                android:padding="@dimen/small_margin"
                android:text="Email: " />

            <TextView
                android:id="@+id/tvEmailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPhoneLabel"
                android:layout_marginLeft="@dimen/margin"
                android:layout_toRightOf="@+id/tvEmailLabel"
                android:autoLink="email"
                android:padding="@dimen/small_margin"
                android:text="@string/hello_world" />

            <TextView
                android:id="@+id/tvCurrencyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmailLabel"
                android:padding="@dimen/small_margin"
                android:text="Currency: " />

            <TextView
                android:id="@+id/tvCurrencyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmailLabel"
                android:layout_marginLeft="@dimen/margin"
                android:layout_toRightOf="@+id/tvCurrencyLabel"
                android:autoLink="none"
                android:padding="@dimen/small_margin"
                android:text="@string/hello_world" />

            <TextView
                android:id="@+id/tvWebsiteLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurrencyLabel"
                android:padding="@dimen/small_margin"
                android:text="Website: " />

            <TextView
                android:id="@+id/tvWebsiteValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurrencyLabel"
                android:layout_marginLeft="@dimen/margin"
                android:layout_toRightOf="@+id/tvWebsiteLabel"
                android:autoLink="web"
                android:padding="@dimen/small_margin"
                android:text="@string/hello_world" />
        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pbHotelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>