<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f3f3f"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/include"
        android:layout_alignTop="@+id/ivHotelLogo"
        android:layout_toLeftOf="@+id/etUserName" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivHotelLogo"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to the"
                android:layout_marginBottom="10dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karma Jimbaran Resort"
                android:textSize="25dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivHotelLogo"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:hint="UserName"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etUserName"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin" />

            <Button
                android:id="@+id/btLogin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Login" />

            <Button
                android:id="@+id/btRegister"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Register" />

            <include
                android:id="@+id/include"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="50dp"
                layout="@layout/view_appinfo" />
        </LinearLayout>
    </ScrollView>

  
</RelativeLayout>